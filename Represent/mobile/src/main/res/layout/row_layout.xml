<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:focusableInTouchMode="false"
    >

    <ImageView
        android:id="@+id/rep_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/rep_twot"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/rep_img"
        android:layout_toLeftOf="@+id/rep_tweet"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/rep_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rep_img"
        android:textSize="18dp"
        android:textColor="#000000"

        android:paddingTop="2dp"
        />
    <TextView
        android:id="@+id/rep_party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rep_name"
        android:layout_toRightOf="@+id/rep_img"
        android:textColor="#A4DFF2"
        android:paddingTop="2dp"
        />
    <TextView
        android:id="@+id/rep_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rep_party"
        android:layout_toRightOf="@+id/rep_img"
        android:textColor="#551A8B"
        android:paddingTop="2dp"
        />
    <TextView
        android:id="@+id/rep_web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rep_email"
        android:layout_toRightOf="@+id/rep_img"
        android:textColor="#551A8B"
        android:paddingTop="2dp"
        />
    <TextView
        android:id="@+id/rep_tweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rep_img"
        android:layout_toRightOf="@+id/rep_img"
        android:textColor="#000000"
        android:paddingTop="2dp"
        android:textSize="10dp"
        />



</RelativeLayout>